<!-- APPLY Merit Scholarship (Button) -->
<% let isDisabled = '' %>
<% if (foundScholarship.meritApplicationStatusCode === '200') { %>
    <% isDisabled = 'disabled' %>
<% } %>

<button <%= isDisabled %>
        type="button"
        class="btn btn-success"
        data-bs-toggle="modal"
        data-bs-target="#meritScholarship">Apply
</button>
<!-- APPLY Merit Scholarship (Button) -->

<!-- APPLY Merit Scholarship (Floating Form) -->
<div class="modal fade"
     id="meritScholarship"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog floating-card">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title fw-bold text-muted" id="staticBackdropLabel">Merit Scholarship</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form class="row" action="/student-scholarship" method="post">

                    <!-- CRUD Information -->
                    <input type="hidden" name="CRUD" value="STUDENT_MERIT_APPLY">
                    <!-- /CRUD Information -->

                    <div class="text-center">

                        <table class="table table-hover table-responsive table-striped">
                            <tr>
                                <td style="font-size: 18px">
                                    You are applying for the merit scholarship. The application will be viewed by the
                                    admin. Please be patient until the admin updates your scholarship request.
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Send Application</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!-- /APPLY Merit Scholarship (Floating Form) -->